extends ../layout

block content
  .loginbox
    .page-header
      h3 Forgot Password
    form.form-horizontal.input(method='POST')
      .row
        input(type='hidden', name='_csrf', value=_csrf)
        h3 Enter your email address below and we will send you password reset instructions.
        .row
          .input-field.col.s12
            label(for="email") Email
            input(id="email", name="email", type="email", class="validate")
        .row
          .btn-large(type="submit") Reset email

          a.btn.btn-link(href='/login')
            i.fa.fa-key
            | Back to login
