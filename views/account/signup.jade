extends ../layout

block content
  .loginbox
    .page-header
      h3 Register
    form.form-horizontal.login(id="signup-form", method='POST')
      .row
        h3 Sign up with Facebook
        .row
          a.btn-large.social-login(href='/auth/facebook')
            i.fa.fa-facebook.pre
            h3 Login
        input(type='hidden', name='_csrf', value=_csrf)
        h3 or
        .row
          .input-field.col.s12
            label(for="email") Email
            input(id="email", name="email", type="email", class="validate")
        .row
          .input-field.col.s12
            label(for="password") Password
            input(id="password", name="password", type="password", class="validate")
        .row
          .input-field.col.s12
            label(for="confirmPassword") Confirm password
            input(id="confirmPassword", name="confirmPassword", type="password", class="validate")
        .row
          .btn-large(type="submit") SIGN UP

          a.btn.btn-link(href='/login') Login
